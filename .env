# For testing purposes, the .env files have been included in the repository.
# In a production environment, ensure that these files are excluded from version control
# Docker Compose Environment Variables

# ===== Database Configuration =====
POSTGRES_DB=school_mgmt
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432

# ===== Backend Configuration =====
BACKEND_PORT=5007

# JWT Secrets
JWT_ACCESS_TOKEN_SECRET=your_super_secret_jwt_access_token_key_change_this_in_production
JWT_REFRESH_TOKEN_SECRET=your_super_secret_jwt_refresh_token_key_change_this_in_production
CSRF_TOKEN_SECRET=your_super_secret_csrf_token_key_change_this_in_production

# JWT Token Expiration Times (in milliseconds)
JWT_ACCESS_TOKEN_TIME_IN_MS=900000
JWT_REFRESH_TOKEN_TIME_IN_MS=28800000
CSRF_TOKEN_TIME_IN_MS=950000

# Email Verification & Password Setup
EMAIL_VERIFICATION_TOKEN_SECRET=your_super_secret_email_verification_key
EMAIL_VERIFICATION_TOKEN_TIME_IN_MS=18000000
PASSWORD_SETUP_TOKEN_SECRET=your_super_secret_password_setup_key
PASSWORD_SETUP_TOKEN_TIME_IN_MS=300000

# Application URLs
UI_URL=http://localhost:5173
API_URL=http://localhost:5007
COOKIE_DOMAIN=localhost

# Email Configuration
MAIL_FROM_USER=noreply@school-mgmt.com
RESEND_API_KEY=your_resend_api_key_here

# Environment
NODE_ENV=development

# ===== Frontend Configuration =====
FRONTEND_PORT=5173
# Backend is accessible via localhost because port is mapped
VITE_API_URL=http://localhost:5007